<Window x:Class="ContractMonthlyClaimSystem.SubmitClaim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Submit a New Claim" FontSize="18" FontWeight="Bold" Margin="0 0 0 20"/>

            <Label Content="Claim Month:"/>
            <TextBox Name="txtMonth" Margin="0 0 0 10"/>

            <Label Content="Hours Worked:"/>
            <TextBox Name="txtHours" Margin="0 0 0 10"/>

            <Label Content="Notes:"/>
            <TextBox Name="txtNotes" Height="80" AcceptsReturn="True" Margin="0 0 0 10"/>

            <Button Content="Submit Claim" Width="150" HorizontalAlignment="Right" Click="SubmitClaimBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
