<Window x:Class="ContractMonthlyClaimSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f5f5f5" Margin="10">
        <TabControl>
            <!-- Lecturer Tab -->
            <TabItem Header="Lecturer Dashboard">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <Button Content="Submit New Claim" Width="150" Margin="5" Click="SubmitClaim_Click"/>
                        <Button Content="Upload Document" Width="150" Margin="5" Click="UploadDocument_Click"/>
                        <Button Content="View My Claims" Width="150" Margin="5"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="White" Padding="10" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="My Claims" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
                            <ListView Name="LecturerClaimsList">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Claim ID" Width="100"/>
                                        <GridViewColumn Header="Month" Width="100"/>
                                        <GridViewColumn Header="Hours Worked" Width="120"/>
                                        <GridViewColumn Header="Total Amount" Width="120"/>
                                        <GridViewColumn Header="Status" Width="100"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Approver Tab -->
            <TabItem Header="Approver Dashboard">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <Button Content="Pending Claims" Width="150" Margin="5"/>
                        <Button Content="Approved Claims" Width="150" Margin="5"/>
                        <Button Content="Rejected Claims" Width="150" Margin="5"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="White" Padding="10" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Pending Claims for Review" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
                            <ListView Name="PendingClaimsList" MouseDoubleClick="OpenReviewClaim">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Claim ID" Width="100"/>
                                        <GridViewColumn Header="Lecturer" Width="150"/>
                                        <GridViewColumn Header="Month" Width="100"/>
                                        <GridViewColumn Header="Amount" Width="100"/>
                                        <GridViewColumn Header="Status" Width="100"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
